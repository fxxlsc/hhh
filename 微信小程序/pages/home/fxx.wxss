    .box{
        display: flex;
        flex-direction:row;
        width: 100%;
        height:130rpx;
    }
    .box view{
      width: 33%;
      height: 100%;
      position: relative;
    
    }
    .box view view{
      background-color: #efefef;
      width:128rpx;
      height:100rpx;
      position: absolute;
      left: 0rpx;
      right: 0rpx;
      bottom: 0rpx;
      top: 0rpx;
      margin: auto;
      border-radius:60%;  
    }
    .box view:nth-last-child(1) view view{
