    }
      .box view:nth-last-child(3) view view{
  background: url(http://img.hb.aicdn.com/22a3b8e35237d4ff7f00cbb41365ca97e08459c91783-wpQVKQ_fw658);
    }
.box view view view{
      width:100rpx;
      height:100rpx;
      background-size:cover;
      background-position:center center;
      background-repeat: no-repeat;  
    }
    .flower-item,.flower-item2{
    display: grid;
    grid-template-columns:230rpx 230rpx 230rpx;
    grid-template-rows:150rpx 150rpx;
    border:5px solid #fff;
    grid-column-gap: 10px;
    }
    .item1,.item2,.item3,.item4{
      position: relative;
    }
    .item1{
        grid-column: 1 / 2;
        grid-row: 1/3;
    }
  .item2{
        grid-column:2 / 3;
        grid-row: 1/2;
  
    }
      .item4{
        grid-column:2 / 3;
        grid-row: 2/3;
    }
     .item3{
        grid-column:3 / 4;
        grid-row: 1/3;
    }
.item1 image,.item2 image,.item3 image,.item4 image{
  width: 100%;
  height: 100%;
}
.item1 view,.item2 view,.item3 view,.item4 view{
  position: absolute;
  text-align: center;
  color:white;
  font-size:26rpx;
}
.item1 view{
  width: 100%;
  margin: 30rpx auto;
}
.item1 view text{
  display: block;
}
.item2 view,.item3 view,.item4 view{
 right: 0rpx;
 bottom: 0rpx;
}
.item2 view text,.item3 view text,.item4 view text{
  background-color: rgb(153, 153, 153);
}