.free-WaterfallFlow{
  width:98%;
  column-count:2;/*column-count 属性规定元素应该被分隔的列数：*/
  font-family: 楷体, 楷体_GB2312, SimKai;
}
.free-WaterfallFlow .flex-wrap{
  display: inline-block;
  width:98%;
  margin-bottom:2%;
  border:1px solid #ccc;
  padding:2%;
  padding-top:5%;
  margin-right:2%;
  box-shadow: 0 1px 2px rgba(34, 25, 25, 0.4);
  text-align: center;
  position: relative;
}
.flex-wrap image{
  width:95%;
  margin:0 auto;
}
.flex-wrap view:nth-child(2){
  font-size:15px;
  padding:2% 0;
  color:#717171;
}
.flex-wrap view:nth-child(3){
  font-size:13px;
  padding:2% 0;
  color:#aaa;
  text-align: right;
}
.love{
  opacity:0;
  background-color: #d5a6bd;
  display: inline-block;
  width:80rpx;
  height:32rpx;
  text-align:center !important;
  line-height:32rpx;
  position: absolute;
  right: 0px;
  bottom:0px;
  color: white !important;
}
.flex-wrap:hover .love{
  opacity: 1;
}
