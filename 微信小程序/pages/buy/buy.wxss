.shopcar{
    display: grid;
    grid-template-columns:364rpx 364rpx;
    grid-template-rows:180rpx 10rpx 300rpx 100rpx 80rpx 80rpx 80rpx 80rpx 160rpx 80rpx;
    border:10rpx solid #fff;
    grid-column-gap:5px;
    font-family: 楷体, 楷体_GB2312, SimKai;
    font-size:34rpx !important;
}
.item{
   grid-column: 1 / 3;
   grid-row: 1/2;
}
.item1{
   grid-column: 1 / 3;
  grid-row: 2/3;
  /* background:linear-gradient(to right, #f0f0f0,orange,yellow,green,blue,indigo,violet); */
}
.item2{
   grid-column: 1 / 2;
   grid-row: 3/4;
}
.item2 image{
  width: 100%;
  height: 100%;
}
.item3{
