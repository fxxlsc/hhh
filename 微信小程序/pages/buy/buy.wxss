.stepper {
  width:160rpx;
  height:52rpx;
  margin:-13rpx 100rpx;
  border: 2rpx solid #ccc;
  border-radius: 6rpx;
  display: inline-block;
  text-align: right;
}
/*加号和减号*/
.stepper text {
  float: left;
  width: 38rpx;
  line-height: 52rpx;
  text-align: center;
}
/*数值*/
.stepper input {
  width: 80rpx;
  height: 52rpx;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 24rpx;
  border-left: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
}
/*普通样式*/
.stepper .normal {
  color:black;
}
/*禁用样式*/
.stepper .disable {
  color: #ccc;
}
