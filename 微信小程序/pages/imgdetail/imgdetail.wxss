/* pages/imgdetail/imgdetail.wxss */
.newgoods{
  width: 100%;
  height:600rpx;
}
.box {
  height: 100%;
  white-space: nowrap;
  box-sizing: border-box
}
.box-item {
  width:100%;
  height: 100%;
  box-sizing: border-box;
  display: inline-block
}
.box-item>image{
  width: 100%;
  height: 100%;
}
.tuijian text{
border-left: 4rpx solid #407893;
padding-right: 12rpx;
}

.box-item{
  border-radius: 500rpx;
  margin-right: 10rpx;
}

.box-item image{
  border-radius: 20rpx;
}
.goodsitems{
    display: grid;
    grid-template-columns:364rpx 364rpx;
    grid-template-rows:200rpx;
    grid-column-gap:30rpx; 
    margin-top:40rpx;
}
.item1{
        grid-column:1 / 2;
        grid-row: 1 / 2;
        position: relative;
}
.item2{
        grid-column:2 / 3;
        grid-row: 1 / 2;
        position: relative;
}
.item1 text:nth-child(2){
   font-size:28rpx;
   color:rgb(153, 153, 153);
   font-family: 楷体, 楷体_GB2312, SimKai;
   margin-left:138rpx;
   margin-top: 20rpx;
}
.icon{
  position: absolute;
  display: inline-block;
  width:72rpx;
  height:56rpx;
  top:10rpx;
  left: 0rpx;
  background: url(http://img.hb.aicdn.com/026bcd90f609847231163a0d1a064e0d61880e2d1700-DSQ8eY_fw658);
  background-position:-134rpx -450rpx;
  background-repeat: no-repeat;
}
.item2 text,.item{
     color: #d5a6bd;
     font-family: 楷体, 楷体_GB2312, SimKai;
     display: block;
     text-align: center;
     font-size:28rpx;
}
.item2 text:nth-child(2){
  background-color:#d5a6bd;
  color: white; 
  width: 140rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  right:100rpx;
  bottom:70rpx;
  position: absolute;
}
.otherlist{
  display: grid;
    grid-template-columns:750rpx;
    grid-template-rows:100rpx 600rpx 600rpx 600rpx;
    grid-column-gap:30rpx; 
}
.otherlist .item{
       grid-column:1 / 2;
        grid-row: 1 / 2;
        font-size: 40rpx;
        color: black;
}
.otherlist .item1{
       grid-column:1 / 2;
      grid-row: 2 / 3;
}
.otherlist .item2{
       grid-column:1 / 2;
    grid-row: 3 / 4;
}
.otherlist .item3{
       grid-column:1 / 2;
        grid-row: 4 / 5;
}
.otherlist view image{
width: 100% !important;
height: 100% !important;
}