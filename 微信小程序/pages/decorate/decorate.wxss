/* pages/decorate/decorate.wxss */
.top
{
    display: grid;
    grid-template-columns:234rpx 250rpx 234rpx;
    grid-template-rows:360rpx;
    border:6rpx solid #fff;
    grid-column-gap:5px;
    font-family: 楷体, 楷体_GB2312, SimKai;
}
.item1{
   grid-column: 1 / 2;
   grid-row: 1/2;
}
.item2{
   grid-column: 2 / 3;
   grid-row: 1/2;
}
.item3{
   grid-column:3 / 4;
   grid-row: 1/2;
}
.item1 image,.item3 image,.item4 image{
  width: 100%;
  height: 100%;
}
.word{
  background-color: rgb(245, 164, 131);
  width: 100%;
  height: 100%;
  color: white;
 font-size:28rpx;
 text-align: center;
}
.word text{
  display: inline-block;
  padding: 3rpx 20rpx;
} 
.list{
    display: grid;
    grid-template-columns:365rpx 365rpx;
    grid-template-rows:350rpx 350rpx 350rpx;
    border:6rpx solid #fff;
    grid-column-gap:5px;
    margin-top:14rpx;
}
.listone{
   grid-column: 1 / 2;
   grid-row: 1/2;
}
.listtwo{
  grid-column: 2 / 3;
   grid-row: 1/2;

}
.listthree{
   grid-column: 1 / 2;
   grid-row: 2/3;
}
.listfour{
  grid-column: 2 / 3;
     grid-row: 2/3;
}
.listfive{
   grid-column: 1 / 2;
   grid-row: 3/4;
}
.listsix{
  grid-column: 2 / 3;
  grid-row: 3/4;
}
.listone image{
  width: 100%;
  height: 100%;
}
.listfour image{
  width: 100%;
  height: 100%;
}
.listfive image{
  width: 100%;
  height: 100%; 
}
.listtwo text,.listthree text,.listsix text{
    color: rgb(153, 153, 153);
    font-size:30rpx;
    padding: 8rpx 2rpx;
    display: inline-block;
  
}
.line{
    border-bottom:2rpx solid rgb(139, 117, 108);
}
.floor{
    color: black !important;
    padding: 0rpx 16rpx !important;
    font-size:34rpx !important;
    font-weight: bold;
}
.price
{
  color: #d5a6bd !important;
  
}
